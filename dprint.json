{
    "excludes": [
        "**/*-lock.json",
        "**/coverage",
        "**/dist",
        "**/node_modules",
        "**/out",
        "**/.vscode-test"
    ],
    "includes": [
        "**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,toml}"
    ],
    "incremental": true,
    "indentWidth": 4,
    "lineWidth": 120,
    "newLineKind": "crlf",
    "plugins": [
        "https://plugins.dprint.dev/dockerfile-0.3.0.wasm",
        "https://plugins.dprint.dev/json-0.16.0.wasm",
        "https://plugins.dprint.dev/markdown-0.14.1.wasm",
        "https://plugins.dprint.dev/toml-0.5.4.wasm",
        "https://plugins.dprint.dev/typescript-0.77.0.wasm"
    ],
    "typescript": {
        "binaryExpression.operatorPosition": "nextLine",
        "importDeclaration.preferSingleLine": false, // keep eslint <-> dprint friendly
        "quoteStyle": "alwaysSingle",
        "semiColons": "prefer"
    }
}
// https://dprint.dev/plugins/typescript/config/
