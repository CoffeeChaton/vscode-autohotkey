{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "outDir": "out",
        "lib": [
            "ES5",
            "ES6",
            "ES7",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "ESNext",
            "ScriptHost",
            "ES2015.Core",
            "ES2015.Collection",
            "ES2015.Generator",
            "ES2015.Iterable",
            "ES2015.Promise",
            "ES2015.Proxy",
            "ES2015.Reflect",
            "ES2015.Symbol",
            "ES2015.Symbol.WellKnown",
            "ES2016.Array.Include",
            "ES2017.object",
            "ES2017.Intl",
            "ES2017.SharedMemory",
            "ES2017.String",
            "ES2017.TypedArrays",
            "ES2018.Intl",
            "ES2018.Promise",
            "ES2018.RegExp"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "removeComments": true,
        "strict": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        // "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "types": [
            "@types/node",
            "jest"
        ],
        "useUnknownInCatchVariables": false
    },
    "diagnostics": true,
    "exclude": [
        "node_modules",
        ".vscode-test",
        "out",
        "dict"
    ]
}
